#!/usr/bin/env bash

# User settings
export VISUAL=vim
export EDITOR=vim
export FZF_DEFAULT_COMMAND='fd --type f'
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
#export PAGER=vimpager

# Colourful vim
export TERM='xterm-256color'

if [[ $OSTYPE =~ "darwin" ]]; then
  # Use homebrew python : homebrew bin : ruby : Visual Code
  export PATH="$HOME/.cargo/bin:/usr/local/opt/python/libexec/bin:/usr/local/bin:/usr/local/lib/ruby/gems/2.6.0/bin/:/usr/local/sbin:/Applications/Visual Studio Code.app/Contents/Resources/app/bin:$PATH"

  export NOTE_DIR=~/Dropbox/Documents/notes

  # Arduino-mk
  export ARDUINO_DIR=/Applications/Arduino.app/Contents/Java 
  export ARDMK_DIR=/usr/local/opt/arduino-mk
  export AVR_TOOLS_DIR=/usr/local
  export USER_LIB_PATH=~/Programming/Arduino/libraries

  # ESP32
  export ESP_TOOLCHAIN_PATH=~/esp/xtensa-esp32-elf/bin
  export IDF_PATH=~/esp/esp-idf
else
  export NOTE_DIR=~/.notes

  # Arduino-mk
  export ARDUINO_DIR=/usr/share/arduino
  export ARDMK_DIR=/home/john/Arduino-Makefile
  export USER_LIB_PATH=/home/john/libraries

  # ESP32
  export ESP_TOOLCHAIN_PATH=/opt/esp/xtensa-esp32-elf/bin
  export IDF_PATH=/opt/esp/esp-idf
  # export PATH="$HOME/esp/xtensa-esp32-elf/bin:$PATH" # set using get_esp32 alias

  export LC_COLLATE=C # fixes sort with ctags vim error
fi

export TODO=$NOTE_DIR/todo.md
