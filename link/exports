#!/usr/bin/env bash

# User settings
export VISUAL=vim
export EDITOR=vim
#export PAGER=vimpager

# Colourful vim
export TERM='xterm-256color'

if [[ $OSTYPE =~ "darwin" ]]; then
  # Use homebrew python : homebrew bin : MATLAB syntax checker
  export PATH="$HOME/.cargo/bin:/usr/local/opt/python/libexec/bin:/usr/local/bin:$PATH:/usr/local/sbin:/Applications/MATLAB_R2014b.app/bin/maci64" 

  # Arduino-mk
  export ARDUINO_DIR=/Applications/Arduino.app/Contents/Java 
  export ARDMK_DIR=/usr/local/Arduino-Makefile
  export AVR_TOOLS_DIR=/usr/local
else
  # Arduino-mk
  export ARDUINO_DIR=/usr/share/arduino
  export ARDMK_DIR=/home/john/Arduino-Makefile
  export USER_LIB_PATH=/home/john/libraries
  #export AVR_TOOLS_DIR=/usr/bin/
  export LC_COLLATE=C # fixes sort with ctags vim error
fi
