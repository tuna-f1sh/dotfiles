#!/bin/bash
# Flash a binary to the Black Magic Probe
# Usage: bmp-flash <binary>
set -e

probe=/dev/ttyBmpGdb

get_probe() {
  serial=$(cyme --vidpid=0x1d50:0x6018 --blocks serial --no-color)

  echo "Found BMP $serial"
  if [ -z "$serial" ]; then
    echo "Could not find Black Magic Probe 0x1d50:0x6018!"
    exit 1
  fi

  if [ "$(uname)" == "Darwin" ]; then
    probe="$(find /dev/cu.usbmodem"$serial"* | head -n 1)"
  else
    probe=/dev/ttyACM0
  fi
}

if [ ! -e "$probe" ]; then
  get_probe
fi

if [ ! -e "$probe" ]; then
  echo "Black Magic Probe not found!"
  exit 1
fi

if [ ! -e "${1}" ]; then
  echo "File ${1} not found!"
  exit 1
fi

echo "Flashing ${1} to ${probe}..."
arm-none-eabi-gdb -nx --batch -ex "target extended-remote $probe" -x "${HOME}"/dotfiles/support/scripts/embedded/bmp_flash.scr "${1}"
